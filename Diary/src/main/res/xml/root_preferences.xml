<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/text_header">

        <ListPreference
            app:defaultValue="@string/title_default_value"
            app:entries="@array/title_text_entries"
            app:entryValues="@array/title_text_value"
            app:key="title_text"
            app:title="@string/text_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="@string/date_default_value"
            app:entries="@array/title_text_entries"
            app:entryValues="@array/date_text_values"
            app:key="date_text"
            app:title="@string/text_date"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="@string/editor_default_value"
            app:entries="@array/title_text_entries"
            app:entryValues="@array/text_editor_value"
            app:key="editor_text"
            app:title="@string/text_editor"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
